= form_for @underwriting do |f|
  - if @underwriting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@underwriting.errors.count, "error")} prohibited this underwriting from being saved:"
      %ul
        - @underwriting.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :shop
    = f.text_field :shop
  .field
    = f.label :status
    = f.number_field :status
  .actions
    = f.submit 'Save'
