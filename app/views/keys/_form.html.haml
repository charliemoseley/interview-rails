= form_for @key do |f|
  - if @key.errors.any?
    #error_explanation
      %h2= "#{pluralize(@key.errors.count, "error")} prohibited this key from being saved:"
      %ul
        - @key.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :shop
    = f.text_field :shop
  .field
    = f.label :identifier
    = f.text_field :identifier
  .actions
    = f.submit 'Save'
